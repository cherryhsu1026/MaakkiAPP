    <style name="ChatAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

            <item name="colorControlActivated">#ddd</item>
            <item name="colorControlHighlight">@color/my_spinner_text_color</item>

        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">#ffffffff</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>

        <item name="actionBarStyle">@style/ChatActionBar</item>
    </style>
    <style name="POSTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">#fff</item>

        <item name="actionBarStyle">@style/ChatActionBar</item>
    </style>

    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>
    <style name="ChatActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@color/colorTitleText</item>

    </style>
    <!--<item name="titleTextStyle">@style/ChatTitleTextStyle</item>-->
    <style name="ChatTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorTitleText</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#FFF</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFF</item>
        <!-- Used for the background -->
        <item name="android:background">#811</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/my_spinner_text_color</item>
    </style>
    <style name="Spinner">
        <!-- Used for the bottom line when not selected / focused -->
        <item name="colorControlNormal">@color/my_spinner_text_color</item>
        <item name="colorControlActivated">@color/my_spinner_text_color</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent          color by default -->
    </style>
    <style name="AlertDialogCustom" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/my_spinner_text_color</item>
        <item name="android:colorAccent">@color/my_spinner_text_color</item>
        <item name="colorControlNormal">@color/my_spinner_text_color</item>
        <item name="colorControlActivated">@color/my_spinner_text_color</item>
        <item name="colorControlHighlight">@color/my_spinner_text_color</item>
    </style>
</resources>
