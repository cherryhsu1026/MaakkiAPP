<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#000000"
        app:navigationContentDescription="@string/abc_action_bar_up_description"
        app:navigationIcon="?homeAsUpIndicator"
        app:title="奖金列表"

        app:titleTextAppearance="@style/Toolbar.TitleText" />
    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_toolbar"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:stretchMode="columnWidth" />
    //FloatingActionButton
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/setting_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:visibility="invisible" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_toolbar"
        android:gravity="center">
        <ImageView
            android:id="@+id/no_Remit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/no_remittance"
            android:visibility="invisible" />
    </RelativeLayout>
    //set Conditions:day
    <RelativeLayout
        android:id="@+id/RL_condition_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp">
        //today,yesterday
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="6dp"
                android:gravity="center"
                android:padding="4dp"
                android:src="@drawable/ic_keyboard_arrow_left_black_18dp"
                />

            <TextView
                android:id="@+id/tv_backward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/tv_border_grey"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:text="B"
                android:textColor="@color/greyscale3"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_beforeyd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/tv_border_grey"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:text="前"
                android:textColor="@color/greyscale3"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_yesterday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/tv_border_grey"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:text="昨"
                android:textColor="@color/greyscale3"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/tv_border_grey"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:text="今"
                android:textColor="@color/greyscale3"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/tv_border_grey"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:text="F"
                android:textColor="@color/greyscale3"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_bonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/tv_border_grey"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:text="奖"
                android:textColor="@color/greyscale3"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_remittance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/tv_border_grey"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:text="汇"
                android:textColor="@color/greyscale3"
                android:textSize="15dp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:padding="4dp"
                android:src="@drawable/ic_keyboard_arrow_right_black_18dp"
                android:visibility="invisible"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>