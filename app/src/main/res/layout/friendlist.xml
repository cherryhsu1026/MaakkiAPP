<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#000000"
        app:navigationContentDescription="@string/abc_action_bar_up_description"
        app:navigationIcon="?homeAsUpIndicator"
        app:title="全部列表"
        app:titleTextAppearance="@style/Toolbar.TitleText" />
    <!--android:elevation="4dp"-->
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_toolbar"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_search"
            />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_search"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="13dp"
            android:textColor="#000"
            android:textSize="18dp"
            android:textStyle="bold"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/et_keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="120dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/iv_search"
            android:background="@drawable/edittext_style"
            android:hint="请输入关键字.."
            android:inputType="text"
            android:textColor="#333"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/iv_search"
            android:background="@drawable/textview_solid_freshblue"
            android:paddingLeft="12dp"
            android:paddingTop="9dp"
            android:paddingRight="12dp"
            android:paddingBottom="9dp"
            android:text="搜寻"
            android:textColor="#fff"
            android:textSize="14dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_below="@id/rl_top"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:stretchMode="columnWidth" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_top">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/setting_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RL_nothing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_top"
        android:layout_marginBottom="60dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/no_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/no_friends"
            android:visibility="invisible" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/RL_condition_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp">
        //today,yesterday
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_left"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="6dp"
                android:gravity="center"
                android:padding="4dp"
                android:src="@drawable/ic_keyboard_arrow_left_black_18dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_backward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/tv_border_grey"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:text="B"
                android:textColor="@color/greyscale3"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_beforeyd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/tv_border_grey"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:text="前"
                android:textColor="@color/greyscale3"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/tv_border_grey"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:text="全"
                android:textColor="@color/greyscale3"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/tv_border_grey"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:text="友"
                android:textColor="@color/greyscale3"
                android:textSize="15dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/tv_border_grey"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:text="寻"
                android:textColor="@color/greyscale3"
                android:textSize="15dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_iinvite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/tv_border_grey"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:text="邀"
                android:textColor="@color/greyscale3"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_addme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/tv_border_grey"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:text="加"
                android:textColor="@color/greyscale3"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/tv_border_grey"
                android:paddingLeft="6dp"
                android:paddingTop="4dp"
                android:paddingRight="6dp"
                android:paddingBottom="4dp"
                android:text="黑"
                android:textColor="@color/greyscale3"
                android:textSize="15dp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/iv_right"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:padding="4dp"
                android:src="@drawable/ic_keyboard_arrow_right_black_18dp"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>